{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "noEmit": false,
    "pretty": true,
    "stripInternal": true,
    "skipLibCheck": false
  },
  "include": [
    "src/index.ts",
    "src/utils/index.ts"
  ],
  "exclude": [
    "./test/**/*.ts"
  ]
}