{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [ "ES2020" ],   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // Library stuff
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "test",
    "eslint.config.ts"
  ]
}
