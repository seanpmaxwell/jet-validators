{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/cjs",
    "declaration": false,
    "noEmit": false,
    "removeComments": true,
    "pretty": false
  },
  "include": [
    "src/index.ts",
    "src/utils/index.ts"
  ],
  "exclude": [
    "./test/**/*.ts"
  ]
}
